{% extends 'base.twig'%}
{% block title %}Compras{% endblock %}
{% block content %}
<div class="row mt-2">
    <div class="col-md-4">
        <h2>Compras</h2>
        <form action="/incluir_compra" method="POST">
            <button class='btn btn-success' type='submit'>
                <i class="fas fa-plus-square"></i> Incluir
            </button>

        </form>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {% if compras %}
        <table class="table table-hover table-striped table-sm shadow table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Mercado</th>
                    <th scope="col">Data</th>
                </tr>
            </thead>
            <tbody>
                {% for compra in compras %}
                <tr>
                    <th scope="row">
                        <a href='/editar_compra/{{ compra.id }}'>
                            {{ compra.id }}
                        </a>
                    </th>
                    <td>{{ compra.mercado }}</td>
                    <td>{{ compra.data }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Ops!</strong> N? H?Nenhum Registro de Compras
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}