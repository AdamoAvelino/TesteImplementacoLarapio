{% extends 'base.twig'%}
{% block title %}Ingredientes{% endblock %}
{% block content %}

    <div class="row mt-3 ">
        <div class="col-md-4 " style='min-height: 100%'>
            <div class='shadow p-3' style="min-height: 100%;">
                <h4><span class='badge badge-secondary'>Controle</span></h4>
                <form action="/ingrediente/incluir" method="POST">
                    <button class='btn btn-success' type='submit' title='Incluir Novo Ingrediente'>
                        <i class="fas fa-plus-square"></i>
                    </button>
                </form>
            </div>
        </div>
        <div class='col-md-8'>
            <div class='shadow p-3'>
                <h4><span class='badge badge-secondary'>Filtro</span></h4>
                <form action="/ingrediente/buscar" method='post'>
                    <div class='row'>
                        <div class='col-md-3 form-group'>
                            <input type="text" value="{{filtros.nome ? filtros.nome : ''}}" name="nome" id="" class="form-control form-control-sm"
                                   placeholder="Nome">
                            <input type="hidden" value="{{fop.links ? fop.links : ''}}" name="coluna">
                            <input type="hidden" value="{{fop.order ? fop.order : ''}}" name="order">

                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-3 form-group'>
                            <button type='submit' class='btn btn-warning' title='Busca de Acordo com os Filtros Preenchidos'>
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr>
            <h3 class='text-center'>Ingredientes</h3>
            {% if ingredientes %}
                <table class="table table-hover table-striped table-sm shadow table-bordered">
                    <thead class='thead-dark'>
                        <tr>
                            <th scope="col" width='5%'>
                                <a href='/ingrediente/ordenacao/{{fop.form}}/id/{{fop.order}}'>Id</a>
                            </th>
                            <th scope="col">
                                <a href='/ingrediente/ordenacao/{{fop.form}}/ingr/{{fop.order}}'>Nome</a>
                            </th>
                            <th scope="col" width='10%'>
                                <a href='/ingrediente/ordenacao/{{fop.form}}/qtd/{{fop.order}}'>Quantidade</a>
                            </th>
                            <th scope="col" width='5%'>
                                <a href='/ingrediente/ordenacao/{{fop.form}}/um/{{fop.order}}'>UM</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ingrediente in ingredientes %}
                            <tr>
                                <th scope="row" class='text-center'>
                                    <a href='/ingrediente/editar/{{ ingrediente.id }}'>
                                        {{ ingrediente.id }}
                                    </a>
                                </th>
                                <td>{{ ingrediente.nome }}</td>
                                <td class='text-right'>{{ ingrediente.quantidade }}</td>
                                <td>{{ ingrediente.unidade_medida }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Ops!</strong> Não Há Nenhum Registro de Ingredientes
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}